<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:hz="http://www.hazelcast.com/schema/spring"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    http://www.hazelcast.com/schema/spring http://www.hazelcast.com/schema/spring/hazelcast-spring-3.2.xsd
    ">

	<context:component-scan base-package="dfsi_poc.ep1" />

	<context:annotation-config />
	<context:spring-configured />

	<bean id="Rabbit" class="dfsi_poc.ep1.Rabbit" init-method="init" />

	<camelContext xmlns="http://camel.apache.org/schema/spring"
		id="camel">

		<route id="fileToBus" streamCache="true">
			<from uri="stream:file?fileName=/Users/girish/dfsi/out.dat" />
			<to uri="bean:Rabbit?method=publish" />
		</route>

		<route id="Bus1ToApp">
			<from uri="rabbitmq://localhost:5672/web.card.webactivity?username=guest&amp;password=guest&amp;exchangeType=fanout&amp;autoDelete=false&amp;queue=ha.pbsm.raw&amp;threadPoolSize=1&amp;autoAck=false" />
			<to uri="bean:Rabbit?method=consume" />
		</route>

		<route id="Bus2ToApp">
			<from uri="rabbitmq://localhost:5673/web.card.webactivity?username=guest&amp;password=guest&amp;exchangeType=fanout&amp;autoDelete=false&amp;queue=ha.pbsm.raw&amp;threadPoolSize=1&amp;autoAck=false" />
			<to uri="bean:Rabbit?method=consume" />
		</route>

	</camelContext>
</beans>